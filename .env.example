# ===== Django =====
DJANGO_SETTINGS_MODULE=core.settings
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=metatasks.net, localhost, www.metatasks.net
DEBUG=0

# Static/Media (the Docker Compose mounts these volumes at these paths)
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# ===== Database (PostgreSQL) =====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=metatask
DB_USER=metatask
DB_PASSWORD=change-me-strong

# ===== Redis =====
REDIS_URL=redis://redis:6379/0
# If using Celery:
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ===== Traefik / Let's Encrypt =====
ACME_EMAIL=admin@metatasks.net

# ===== Image owner override if needed (defaults to liam-lillieroth in compose) =====
# GHCR_OWNER=liam-lillieroth